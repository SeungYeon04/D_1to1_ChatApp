<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="#8B7355"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 헤더 (X 버튼 + 카테고리 제목) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#8B7355"
        android:paddingStart="20dp"
        android:paddingEnd="16dp">
        
        <!-- 카테고리 제목 (왼쪽) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/bmjua"
            android:text="카테고리"
            android:textColor="#F3E6D3"
            android:textSize="22sp" />

        <!-- X 버튼 (오른쪽) -->
        <ImageButton
            android:id="@+id/btnCloseMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- 메뉴 항목들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- 개설 -->

        <!-- 로그아웃 -->

        <TextView
            android:id="@+id/menuCreateRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/bmjua"
            android:paddingHorizontal="4dp"
            android:paddingVertical="13dp"
            android:text="계정"
            android:textColor="#FFF7EC"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/menuLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/bmjua"
            android:paddingHorizontal="4dp"
            android:paddingVertical="10dp"
            android:text="로그아웃"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- 탈퇴하기 -->
        <TextView
            android:id="@+id/menuDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/bmjua"
            android:paddingHorizontal="4dp"
            android:paddingVertical="10dp"
            android:text="탈퇴하기"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- 여백용 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="1dp" />

        <!-- 앱정보 텍스트 -->
        <TextView
            android:id="@+id/menuAffection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/bmjua"
            android:paddingHorizontal="4dp"
            android:paddingVertical="13dp"
            android:text="앱정보"
            android:textColor="#FFF7EC"
            android:textSize="24sp" />

        <!-- 이용약관 -->
        <TextView
            android:id="@+id/menuTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/bmjua"
            android:paddingHorizontal="4dp"
            android:paddingVertical="10dp"
            android:text="이용약관"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- 개인정보처리방침 -->
        <TextView
            android:id="@+id/menuPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/bmjua"
            android:paddingHorizontal="4dp"
            android:paddingVertical="10dp"
            android:text="개인정보처리방침"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout> 