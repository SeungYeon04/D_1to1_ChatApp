<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 일반 키보드 버튼 스타일 -->
    <style name="KeyboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 특수 키보드 버튼 스타일 -->
    <style name="KeyboardButtonSpecial">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/keyboard_button_special_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 스페이스바 스타일 -->
    <style name="KeyboardButtonSpace">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources> 