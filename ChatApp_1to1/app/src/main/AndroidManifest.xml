<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chatapp_1to1">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatApp_1to1.NoActionBar"
        tools:targetApi="31">

        <!-- 앱 시작은 임시로 LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ChatApp_1to1.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인 후 이동할 메인 화면 -->
        <activity
            android:name=".StartActivity"
            android:exported="true"
            android:theme="@style/Theme.ChatApp_1to1" />

        <!-- 회원가입 -->
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:theme="@style/Theme.ChatApp_1to1.NoActionBar" />

        <!-- 식물 키우기 기능 -->
        <activity
            android:name=".PlantCareActivity"
            android:exported="true" />

        <!-- 코드 페이지 -->
        <activity
            android:name=".CodeInputActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ChatActivity"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>